%h1 Listing people

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Town
      %th Birth day
      %th
      %th
      %th

  %tbody
    - @people.each do |person|
      %tr
        %td= person.name
        %td= person.email
        %td= person.town
        %td= person.birth_day
        %td= link_to 'Show', person
        %td= link_to 'Edit', edit_person_path(person)
        %td= link_to 'Destroy', person, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

